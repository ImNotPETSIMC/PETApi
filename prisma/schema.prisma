datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  matricula String @unique
  name String
  status String
  email String?
  photo String
  admission_year Int?
  favorite_pillar String?
  course_curriculum Int?
  place_of_birth String?
  hobby String?
  projects String[]
  spotify_track_url String?
  github_url String?
  linkedin_url String?
  instagram_url String?
  lattes_url String?
}

model Tutor {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  photo String
  admission_year Int?
  place_of_birth String?
  email String?
  status String
  disciplines String[]
  github_url String?
  linkedin_url String?
  instagram_url String?
  lattes_url String?
}

model Project {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique    
  subtitle String
  description String
  type String
  photo String
  status String
}

model News {
  id String @id @map("_id") @db.ObjectId
  name String @unique    
  date String
  content String
  photo String
}